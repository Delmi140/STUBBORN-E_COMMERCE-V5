{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}

<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="http://127.0.0.1:8000/">
      <img class="custom-image" src={{asset('media/Logo.png')}}>
    </a>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="http://127.0.0.1:8000/">Accueil</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://127.0.0.1:8000/products">Boutique</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://127.0.0.1:8000/cart">Panier</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://127.0.0.1:8000/login">Se déconnecter</a>
        </li>
        
      </ul>
    </div>
  </div>
</nav>

<main>

    <div class="h1-home">
         <h1 >Boutique</h1>
    </div>

    
    <div class="row">

    <div class="card col-md-6 col-lg-4" style="width: 30rem;">
        
        <div class="card-body">
            <h5 class="h5-home">Fourchette de prix </h5>
            
            
        </div>
    </div>

    {% for product in products %}

    <div class="card col-md-6 col-lg-4" style="width: 30rem;">
        <div class="image-producthome" >
                <img src="{{ vich_uploader_asset(product, 'attachmentFile') }}" class="card-img-top" alt="...">
        </div>
        <div class="card-body">
            <h5 class="h5-home">Nom: {{ product.name }}</h5>
            <p class="p-home"><strong> Prix: {{(product.price / 100)|number_format(2,) }} € </strong></p>

            <div class="d-flex justify-content-end ">
            {% if app.user %}
              <a href="{{ path('details_index', {id: product.id}) }}" class="btn btn-customhome">voir</a>
            {% endif %}
            </div>
  
        </div>
    </div>

    {% endfor %}

    </div>


</main>


<footer>
    <div>
        <p class="p-footer">Nom de la société : Stubborn</p>
        <p class="p-footer">Adresse : Piccadilly Circus, London W1J 0DA, Royaume-Uni</p>
        <p class="p-footer">Adresse de contact : stubborn@blabla.com</p>
        <p class="p-footer">Slogan: Don't compromise on your look</p>
    </div>
</footer>


{% endblock %}
