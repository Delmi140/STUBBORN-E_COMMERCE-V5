{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}


<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="http://127.0.0.1:8000/">
      <img class="custom-image" src={{asset('media/Logo.png')}}>
    </a>

    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="http://127.0.0.1:8000/">Accueil</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://127.0.0.1:8000/products">Boutique</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://127.0.0.1:8000/cart">Panier</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://127.0.0.1:8000/login">Se déconnecter</a>
        </li>
      </ul>
    </div>
  </div>
</nav>


<main>

    <div class="h1-home">
      <h1>Produit</h1>
    </div>

    
    <div>
      {{ form_start(form) }}
        <div class="d-flex justify-content-center align-items-center ">

          <div class="card" style="width: 1000px; height: 500px;">

            <div class="image-productprod d-flex justify-content-start">
              <img src="{{ vich_uploader_asset(product, 'attachmentFile') }}" class="card-img-top" alt="...">
            </div>

            <div class="content-h5 d-flex justify-content-center ">
              <h5 class="h5-product">Nom: {{ product.name }}</h5>
              
            </div>

            <div class="d-flex justify-content-center ">
              <p class="p-product"><strong> Prix: {{(product.price / 100)|number_format(2,) }} € </strong></p>
            </div>


            <div class=" btn-product d-flex justify-content-center ">
              <a href="{{ path('cart_add', {id: product.id}) }}" class="btn btn-customproduct">Ajouter au panier</a>
            </div>

            <div class="content-size d-flex justify-content-end">
              {{ form_row(form.size) }}
        
            </div>

            





          </div>


        </div>
      {{ form_end(form) }}
    </div>
      
</main>


<footer>
    <div>
        <p class="p-footer">Nom de la société : Stubborn</p>
        <p class="p-footer">Adresse : Piccadilly Circus, London W1J 0DA, Royaume-Uni</p>
        <p class="p-footer">Adresse de contact : stubborn@blabla.com</p>
        <p class="p-footer">Slogan: Don't compromise on your look</p>
    </div>
</footer>

{% endblock %}